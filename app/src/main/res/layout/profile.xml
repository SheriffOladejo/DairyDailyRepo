<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout4"
        app:layout_constraintStart_toEndOf="@id/relativeLayout3"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/nameview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Name" />

        <Button
            android:id="@+id/name"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/nameview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="Sheriff Oladejo"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/emailview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="20dp"
            android:text="Email" />

        <Button
            android:id="@+id/email"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/emailview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="Sherifffoladejo@gmail.com"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/phoneview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="20dp"
            android:text="Phone Number" />

        <Button
            android:id="@+id/phone_number"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/phoneview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="08164727987"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/printerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number"
            android:layout_marginTop="20dp"
            android:text="Default Printer" />

        <Button
            android:id="@+id/default_printer"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/printerview"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_marginTop="10dp"
            android:text="Nothing"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/default_printer"
            android:layout_marginTop="20dp"
            android:text="Days Remaining" />

        <Button
            android:id="@+id/days_remaining"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/days"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_marginTop="10dp"
            android:text="Nothing"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/view"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/addressview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address" />

        <Button
            android:id="@+id/address"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/addressview"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="Address"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cityview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginTop="20dp"
            android:layout_below="@id/address"/>

        <Button
            android:id="@+id/city"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/cityview"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="City"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/stateview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State"
            android:layout_marginTop="20dp"
            android:layout_below="@id/city"/>

        <Button
            android:id="@+id/state"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/stateview"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="State"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lastupdatedview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Updated"
            android:layout_marginTop="20dp"
            android:layout_below="@id/state"/>

        <Button
            android:id="@+id/lastupdated"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/lastupdatedview"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="Last Backup"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiry Date"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lastupdated"/>

        <Button
            android:id="@+id/expiry_date"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/expiry"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="Last Backup"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
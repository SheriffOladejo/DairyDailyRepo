<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rl2">

        <TextView
            android:id="@+id/months"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="3 Months (Starter Plan)"
            android:textAlignment="center"
            android:paddingTop="7dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_below="@id/months"
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="149.99 Rs"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_below="@id/price"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/priceButton1"
            android:text="Purchase"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl1"
        app:layout_constraintBottom_toTopOf="@id/rl3">

        <TextView
            android:id="@+id/months1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="6 Months (Spark Plan)"
            android:textAlignment="center"
            android:paddingTop="7dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@color/DividerColor"/>

        <TextView
            android:layout_below="@id/months1"
            android:id="@+id/price1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="249.99 Rs"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_below="@id/price1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Purchase"
            android:id="@+id/priceButton2"
            android:background="@drawable/rectangle_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl2"
        app:layout_constraintBottom_toTopOf="@id/expiry_date">

        <TextView
            android:id="@+id/months2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="12 Months (Enterprise)"
            android:textAlignment="center"
            android:paddingTop="7dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@color/yello"/>

        <TextView
            android:layout_below="@id/months2"
            android:id="@+id/price2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="449.99 Rs"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_below="@id/price2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Purchase"
            android:background="@drawable/rectangle_border"
            android:id="@+id/priceButton3"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/expiry_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:paddingTop="8dp"
        android:layout_height="40dp"
        android:text="Expiry Date: "
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAlignment="center"/>

</android.support.constraint.ConstraintLayout>
